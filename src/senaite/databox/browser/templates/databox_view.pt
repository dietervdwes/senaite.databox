<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="senaite.databox">
  <body>

    <metal:main fill-slot="content-core">

      <tal:main-macro metal:define-macro="main">

        <div tal:replace="structure provider:plone.abovecontenttitle" />

        <table class="table table-sm table-conensed">
          <thead>
            <tal:column tal:repeat="column view/header">
              <th tal:content="column"></th>
            </tal:column>
          </thead>
          <tbody>
            <tal:model tal:repeat="model view/collection">
              <tr>
                <tal:column tal:repeat="column view/columns">
                  <td tal:content="python:view.get(model, column[1])"></td>
                </tal:column>
              </tr>
            </tal:model>
          </tbody>
        </table>

        <div tal:replace="structure provider:plone.belowcontentbody" />

      </tal:main-macro>
    </metal:main>

  </body>
</html>
